<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:id="@+id/root_view"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/y16"
        android:layout_marginTop="@dimen/y20"
        android:text="@string/FINISHED"
        android:textColor="@color/color_4b9fd5_selector"
        android:textSize="@dimen/sp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y191"
        android:text="@string/REGISTRATION_SECCESS"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.cylan.jiafeigou.widget.LoginButton
        android:id="@+id/continue_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y47"
        android:gravity="center"
        android:paddingBottom="@dimen/y15"
        android:paddingEnd="@dimen/y55"
        android:paddingStart="@dimen/y55"
        android:paddingTop="@dimen/y15"
        android:text="@string/CONTINUE_REGISTER"
        android:textColor="@color/common_btn_color_state"
        android:textSize="@dimen/sp17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_success"
        app:lb_stroke_color="@color/color_d8d8d8" />

</android.support.constraint.ConstraintLayout>